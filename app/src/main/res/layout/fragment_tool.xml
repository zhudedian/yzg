<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#25252c">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/top_relative"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/tool_button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/title_text_back"
                android:text="@string/tool_button"/>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0e0e0e"></View>
        <LinearLayout
            android:id="@+id/notice_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/notice_tag"/>
                <TextView
                    android:id="@+id/notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/disconnect_notice"
                    android:textColor="#757575"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#0e0e0e"></View>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <TextView
                android:id="@+id/device_info_text"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:background="@drawable/tool_text_back"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <com.ider.yzg.view.ToolView
                android:id="@+id/screen_shot"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:tag="1"/>
            <com.ider.yzg.view.ToolView
                android:id="@+id/screen_picture"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:tag="2"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.ider.yzg.view.ToolView
                android:id="@+id/tool_clean"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:tag="3"/>
            <com.ider.yzg.view.ToolView
                android:id="@+id/tool_reboot"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_alignLeft="@+id/screen_shot"
                android:tag="4"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>